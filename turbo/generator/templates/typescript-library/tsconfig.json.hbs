{
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "nodenext",
		"target": "es2022",
		"moduleResolution": "nodenext",

		"rootDir": "./src",
		"outDir": "build",

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": true
	}
}
