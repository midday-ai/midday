{
  "extends": "@midday/tsconfig/base.json",
  "include": ["src", "../../types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@jobs/*": ["src/*"],
      "@db/*": ["../../packages/db/src/*"],
      "@api/*": ["../../apps/api/src/*"]
    },
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "../../node_modules",
      "../../types"
    ],
    "types": ["bun-types"]
  }
}
