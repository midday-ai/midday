{
  "name": "midday",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "test": "turbo test --parallel",
    "start:dashboard": "turbo start --filter=@midday/dashboard",
    "start:website": "turbo start --filter=@midday/website",
    "dev:api": "turbo dev --filter=@midday/api",
    "dev:dashboard": "turbo dev --filter=@midday/dashboard",
    "build:dashboard": "turbo build --filter=@midday/dashboard",
    "dev:website": "turbo dev --filter=@midday/website ",
    "dev:desktop": "turbo dev --filter=@midday/desktop",
    "jobs:dashboard": "turbo jobs --filter=@midday/jobs",
    "format": "biome format --write .",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck"
  },
  "packageManager": "bun@1.3.9",
  "catalog": {
    "@ai-sdk/google": "^2.0.33",
    "@ai-sdk/openai": "2.0.62",
    "@ai-sdk/react": "2.0.82",
    "@date-fns/tz": "^1.4.1",
    "@fast-csv/format": "5.0.5",
    "@react-pdf/renderer": "^4.3.1",
    "@sentry/bun": "^10.32.1",
    "@sindresorhus/slugify": "^3.0.0",
    "@trigger.dev/sdk": "4.1.1",
    "ai": "5.0.87",
    "bullmq": "^5.66.4",
    "camelcase-keys": "^10.0.1",
    "change-case": "^5.4.4",
    "date-fns": "^4.1.0",
    "heic-convert": "1.2.4",
    "hono": "4.11.4",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "node-xlsx": "^0.24.0",
    "papaparse": "^5.5.3",
    "pino": "^10.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.5.2",
    "sharp": "0.34.5",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@depot/cli",
    "@sentry/cli",
    "core-js",
    "protobufjs"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "turbo": "2.8.10",
    "typescript": "^5.9.3"
  }
}
