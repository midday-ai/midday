{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/api/Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "multiRegionConfig": {
      "europe-west4-drams3a": { "numReplicas": 1 },
      "us-east4-eqdc4a": { "numReplicas": 1 },
      "us-west2": { "numReplicas": 1 }
    }
  }
}
