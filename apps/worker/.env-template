# Worker Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# Redis Queue (BullMQ)
# Required: Redis connection URL for BullMQ job queue
# Example: redis://localhost:6379 or redis://default:password@host:port
REDIS_QUEUE_URL=redis://localhost:6379

# Supabase Configuration
# Required: Supabase project URL
# Can use either SUPABASE_URL or NEXT_PUBLIC_SUPABASE_URL
SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_URL=

# Required: Supabase service role key (for admin access)
SUPABASE_SERVICE_KEY=

# Database Configuration
# Required: PostgreSQL connection string for job database pooler
# Example: postgresql://user:password@host:port/database?pgbouncer=true
DATABASE_PRIMARY_POOLER_URL=

# Google AI (for embeddings and document classification)
# Required: Google Generative AI API key for document embeddings and classification
GOOGLE_GENERATIVE_AI_API_KEY=

# Resend (for email notifications)
# Required: Resend API key for sending email notifications
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=

# BullMQ Board (for monitoring)
BOARD_USERNAME=
BOARD_PASSWORD=

# Logger
LOG_PRETTY=true

# Worker Environment (development, production, staging)
WORKER_ENV=development